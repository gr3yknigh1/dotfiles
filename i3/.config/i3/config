set $browser vivaldi-stable
set $term    kitty

font pango:Iosevka 9


set $pictures       "$HOME/Pictures"
set $screenshots    "$HOME/Pictures/Screenshots"
set $wallpapers     "$HOME/Pictures/Wallpapers"


exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork
exec --no-startup-id nm-applet

# exec_always --no-startup-id $HOME/.config/polybar/launch.sh

set $mod Mod4
floating_modifier $mod

bindsym $mod+Return exec $term

bindsym $mod+Shift+q kill
bindsym $mod+Shift+l exec ~/.local/bin/lock.sh
bindsym $mod+Shift+f floating toggle

bindsym $mod+d exec --no-startup-id rofi -show drun
bindsym $mod+m exec --no-startup-id rofi -show power-menu -modi power-menu:~/.config/rofi/scripts/rofi-power-menu 

bindsym $mod+z focus mode_toggle

bindsym Mod1+Tab focus next
bindsym Mod1+Shift+Tab focus prev

bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Ctrl+h move left  10 px
bindsym $mod+Ctrl+j move down  10 px
bindsym $mod+Ctrl+k move up    10 px
bindsym $mod+Ctrl+l move right 10 px

bindsym $mod+Ctrl+Shift+h move left  100 px
bindsym $mod+Ctrl+Shift+j move down  100 px
bindsym $mod+Ctrl+Shift+k move up    100 px
bindsym $mod+Ctrl+Shift+l move right 100 px

bindsym $mod+c split h
bindsym $mod+v split v

bindsym $mod+f fullscreen toggle

bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

bindsym $mod+a focus parent
bindsym $mod+i focus child

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

bindsym $mod+1 workspace number $ws1 
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"


bindsym $mod+r mode "resize"
mode "resize" {
  bindsym $mod+Shift+q kill

  set $resize_step 2
  set $shift_resize_step 100

  bindsym $mod+r mode "default"
  bindsym Escape mode "default"

  bindsym $mod+h resize shrink width  $resize_step px or $resize_step ppt
  bindsym $mod+j resize grow   height $resize_step px or $resize_step ppt
  bindsym $mod+k resize shrink height $resize_step px or $resize_step ppt
  bindsym $mod+l resize grow   width  $resize_step px or $resize_step ppt

  bindsym $mod+Shift+h resize shrink width  $shift_resize_step px or $shift_resize_step ppt
  bindsym $mod+Shift+j resize grow   height $shift_resize_step px or $shift_resize_step ppt
  bindsym $mod+Shift+k resize shrink height $shift_resize_step px or $shift_resize_step ppt
  bindsym $mod+Shift+l resize grow   width  $shift_resize_step px or $shift_resize_step ppt
}


bindsym $mod+o mode "launcher"
mode "launcher" {
  bindsym $mod+Shift+q kill

  bindsym $mod+o mode "default"
  bindsym Escape mode "default"

  bindsym $mod+e exec rofimoji

  bindsym $mod+Shift+b exec $browser
  bindsym $mod+Shift+n exec obsidian

  bindsym $mod+Shift+d exec discord
  bindsym $mod+Shift+t exec telegram-desktop
  bindsym $mod+Shift+v exec neovide
  bindsym $mod+Shift+w exec bitwarden-desktop
  bindsym $mod+Shift+s exec pavucontrol

  bindsym $mod+w exec kitty --title iwctl  iwctl
  bindsym $mod+b exec kitty --title bluetoothctl bluetoothctl
  bindsym $mod+f exec kitty --title ranger ranger
  bindsym $mod+h exec kitty --title btop   btop
  bindsym $mod+p exec kitty --title python python 
  bindsym $mod+t exec kitty --title Terminal
}


# Sound
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@   +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@   -10% 
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   @DEFAULT_SINK@   toggle
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness
set $brightness_step 20
bindsym XF86MonBrightnessUp   exec brightnessctl set +$brightness_step
bindsym XF86MonBrightnessDown exec brightnessctl set  $brightness_step-

# Screenshots
bindsym Print            exec --no-startup-id maim -m 1           "$HOME/Pictures/Screenshots/$(date +"%y-%m-%d - %H-%M-%S").png"
bindsym $mod+Print       exec --no-startup-id maim -m 1 --window  $(xdotool getactivewindow) "$HOME/Pictures/Screenshots/$screenshots/$(date +"%y-%m-%d - %H-%M-%S").png"
bindsym Shift+Print      exec --no-startup-id maim -m 1 --select  "$HOME/Pictures/Screenshots/$(date +"%y-%m-%d - %H-%M-%S").png"
bindsym Ctrl+Print       exec --no-startup-id maim -m 1 | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print  exec --no-startup-id maim -m 1 --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim -m 1 --select | xclip -selection clipboard -t image/png

# Window rules
for_window [class="^.*"] border pixel 1
for_window [class="^.*"] floating_border pixel 1

for_window [class="^Bitwarden$"]    floating enable, resize set 900px 600px,  move position center
for_window [title="^iwctl$"]        floating enable, resize set 900px 600px,  move position center
for_window [title="^bluetoothctl$"] floating enable, resize set 900px 600px,  move position center
for_window [title="^Terminal$"]     floating enable, resize set 900px 600px,  move position center
for_window [title="^python$"]       floating enable, resize set 900px 600px,  move position center
for_window [title="^ranger$"]       floating enable, resize set 1200px 600px, move position center
for_window [title="^btop$"]         floating enable, resize set 1200px 900px, move position center

# Gapping
gaps inner 0

# Multimonitor configuration
workspace 3 output HDMI-1

# Title align
title_align center

# Colors

# Nord Theme
set $background_color          #88C0D0
set $inactive_background_color #2E3440
set $text_color                #F5F5F5
set $inactive_text_color       #D8DEE9
set $urgent_background_color   #BF616A

#                       border                     background                 text                       indicator
client.focused          $background_color          $background_color          $inactive_background_color $background_color
client.unfocused        $inactive_background_color $inactive_background_color $inactive_text_color       $inactive_background_color
client.focused_inactive $inactive_background_color $inactive_background_color $inactive_text_color       $inactive_background_color
client.urgent           $urgent_background_color   $urgent_background_color   $text_color                $urgent_background_color

