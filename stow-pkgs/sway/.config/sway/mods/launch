# ~/.config/sway/mods/launch
#
# Launcher mode

include ~/.config/sway/defaults
include ~/.config/sway/globals


mode "launch" {
    bindsym --to-code {

        b exec $browser; mode "default"
        t exec $term --title "Terminal (alacritty)" --class "tui" -o font.size=13; mode "default"

        f exec $term --title "Files (ranger)" --class "tui long" -o font.size=12 -e "ranger"; mode "default"
        s exec $term --title "Sound (pulsemixer)" --class "tui" -o font.size=12 -e "pulsemixer"; mode "default"


        Shift+n exec $term --title "Nvim" --class "tui long" -o font.size=13 -e 'select-folder-in-nvim'; mode "default"
        Shift+h exec $term --title "Tasks (btop)" --class "tui long" -o font.size=13 -e "btop"; mode "default"
        Shift+b exec $term --title "Bluetooth (bluetuith)" --class "tui" -o font.size=12 -e "bluetuith"; mode "default"
        Shift+w exec $term --title "Wifi (iwctl)" --class "tui" -o font.size=12 -e "iwctl"; mode "default"
        Shift+c exec wl-color-picker; mode "default"

        $mod+grave mode "default"
        Return mode "default"
        Escape mode "default"
    }
}

for_window [app_id="^tui"] floating enable; resize set 900px 600px; move position center
for_window [app_id="long"] resize set 1200px 800px;

bindsym --to-code $mod+grave mode "launch"

# vim: set filetype=swayconfig:
